{
  "compilerOptions": {
    "target": "es5", // Next.js recomenda es5 ou mais recente
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true, // Boa pr√°tica
    "noEmit": true,
    "esModuleInterop": true, // Comum e recomendado
    "module": "esnext",
    "moduleResolution": "bundler", // Ou "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Importante para Next.js
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "igrp-wf-engine": ["../igrp-wf-engine/src"] // Mantendo o alias para o engine
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
    // "noUnusedLocals": true, // Pode ser reativado depois
    // "noUnusedParameters": true, // Pode ser reativado depois
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*.ts", "src/**/*.tsx", "next.config.js"],
  "exclude": ["node_modules", "dist"]
}
